<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Soal8"
    android:orientation="vertical">

    <include layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/soalTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soal"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:fontFamily="casual"
        android:layout_margin="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TableRow
            android:background="@color/colorAccent"
            android:padding="5dp">
            <TextView
                android:layout_column="1"
                android:fontFamily="casual"
                android:text="Deskripsi"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Barang"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Jasa"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:padding="5dp">
            <TextView
                android:layout_column="1"
                android:id="@+id/soalBaris1"
                android:fontFamily="casual"
                android:text="Soal Baris"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBarang1"
                    android:fontFamily="casual"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkJasa1"
                    android:fontFamily="casual"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:padding="5dp">
            <TextView
                android:layout_column="1"
                android:id="@+id/soalBaris2"
                android:fontFamily="casual"
                android:text="Soal Baris"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBarang2"
                    android:fontFamily="casual"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkJasa2"
                    android:fontFamily="casual"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:padding="5dp">
            <TextView
                android:layout_column="1"
                android:id="@+id/soalBaris3"
                android:fontFamily="casual"
                android:text="Soal Baris"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBarang3"
                    android:fontFamily="casual"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkJasa3"
                    android:fontFamily="casual"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:padding="5dp">
            <TextView
                android:layout_column="1"
                android:id="@+id/soalBaris4"
                android:fontFamily="casual"
                android:text="Soal Baris"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBarang4"
                    android:fontFamily="casual"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkJasa4"
                    android:fontFamily="casual"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:padding="5dp">
            <TextView
                android:layout_column="1"
                android:id="@+id/soalBaris5"
                android:fontFamily="casual"
                android:text="Soal Baris"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBarang5"
                    android:fontFamily="casual"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkJasa5"
                    android:fontFamily="casual"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnSubmitTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>