<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Soal10"
    android:orientation="vertical">

    <include layout="@layout/header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/soalTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soal"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="casual"
                android:layout_margin="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <TableRow
                    android:background="@color/colorAccent"
                    android:padding="5dp">
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="casual"
                        android:text="No."
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:text="Agama"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="3"
                        android:fontFamily="casual"
                        android:text="T. Ibadah"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="4"
                        android:fontFamily="casual"
                        android:text="Kitab Pedoman"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="5"
                        android:fontFamily="casual"
                        android:text="Hari Raya"/>
                </TableRow>

                <TableRow
                    android:padding="5dp">
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="casual"
                        android:text="1"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans1_1"
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="3"
                        android:fontFamily="casual"
                        android:text="Masjid"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans1_2"
                        android:layout_column="4"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="5"
                        android:fontFamily="casual"
                        android:text="Idul Fitri"/>
                </TableRow>

                <TableRow
                    android:padding="5dp">
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="casual"
                        android:text="2"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:text="Protestan"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans2_1"
                        android:layout_column="3"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="4"
                        android:fontFamily="casual"
                        android:text="Al-Kitab"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans2_2"
                        android:layout_column="5"
                        android:fontFamily="casual"
                        android:hint="isi"/>
                </TableRow>

                <TableRow
                    android:padding="5dp">
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="casual"
                        android:text="3"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans3_1"
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="3"
                        android:fontFamily="casual"
                        android:text="Gereja"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans3_2"
                        android:layout_column="4"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="5"
                        android:fontFamily="casual"
                        android:text="Hari Paskah"/>
                </TableRow>

                <TableRow
                    android:padding="5dp">
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="casual"
                        android:text="4"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:text="Hindu"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans4_1"
                        android:layout_column="3"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="4"
                        android:fontFamily="casual"
                        android:text="Weda"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans4_2"
                        android:layout_column="5"
                        android:fontFamily="casual"
                        android:hint="isi"/>
                </TableRow>

                <TableRow
                    android:padding="5dp">
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="casual"
                        android:text="5"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans5_1"
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="3"
                        android:fontFamily="casual"
                        android:text="Vihara"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans5_2"
                        android:layout_column="4"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="5"
                        android:fontFamily="casual"
                        android:text="Waisak"/>
                </TableRow>

                <TableRow
                    android:padding="5dp">
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="casual"
                        android:text="6"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="2"
                        android:fontFamily="casual"
                        android:text="Khonghucu"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans6_1"
                        android:layout_column="3"
                        android:fontFamily="casual"
                        android:hint="isi"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_column="4"
                        android:fontFamily="casual"
                        android:text="Weda"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <EditText
                        android:id="@+id/ans6_2"
                        android:layout_column="5"
                        android:fontFamily="casual"
                        android:hint="isi"/>
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>